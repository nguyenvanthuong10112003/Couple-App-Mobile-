<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:padding="10dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/idCustomNotificationLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/logo"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/idCustomNotificationTitle"
        android:layout_toRightOf="@id/idCustomNotificationLogo"
        android:layout_toLeftOf="@+id/idCustomNotificationBtnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="14dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/idCustomNotificationContent"
        android:layout_toRightOf="@id/idCustomNotificationLogo"
        android:layout_below="@+id/idCustomNotificationTitle"
        android:layout_toLeftOf="@+id/idCustomNotificationBtnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        />

    <ImageButton
        android:id="@+id/idCustomNotificationBtnClose"
        android:layout_alignParentRight="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_muitenxuong_24"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>