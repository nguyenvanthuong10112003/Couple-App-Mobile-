<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/idContent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:alpha="0.8"
        android:background="@color/primary" />
    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:background="@drawable/circle_white"
        android:padding="5dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/idPageHomeDetailUserImageAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="avatar"
            android:src="@drawable/logo"
            android:textAlignment="center"
            app:shapeAppearanceOverlay="@style/circle"
            android:onClick="viewImageBig"/>
    </FrameLayout>
    <TextView
        android:id="@+id/idPageHomeDetailUserTextAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/user_infouser_1"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/idPageHomeDetailUserTextLifeStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/user_infouser_3" />
    <GridLayout
        android:id="@+id/idPageHomeDetailUserGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Họ và tên: "
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/idPageHomeDetailUserTextFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="0"
            android:layout_column="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.6"
            android:background="@color/secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Ngày sinh: "
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/idPageHomeDetailUserTextDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="2"
            android:layout_column="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.6"
            android:background="@color/secondary"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Giới tính: "
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="4"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/idPageHomeDetailUserTextGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="4"
            android:layout_column="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.6"
            android:background="@color/secondary"
            android:layout_row="5"
            android:layout_columnSpan="2"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Email: "
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="6"
            android:layout_column="0"
            />

        <TextView
            android:layout_marginRight="90dp"
            android:id="@+id/idPageHomeDetailUserTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="nguyenvanthuong10112003@gmail.com"
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="6"
            android:layout_column="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.6"
            android:background="@color/secondary"
            android:layout_row="7"
            android:layout_columnSpan="2"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Ngày tạo: "
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            android:layout_row="8"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPageHomeDetailUserTextTimeCreate"
            android:layout_row="8"
            android:layout_column="1"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/user_infouser_2"
            />
    </GridLayout>
</LinearLayout>