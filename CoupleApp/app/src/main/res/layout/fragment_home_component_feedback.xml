<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/idFragmentHomeIdImageAvatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:shapeAppearanceOverlay="@style/circle"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/account_svgrepo_com"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cùng hẹn hò nhé"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                />
            <TextView
                android:id="@+id/idFragmentHomeTextTimeSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/secondary"
                android:textAlignment="textEnd"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:gravity="center|left"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/idFragmentHomeIdIconGender"
                android:layout_width="16dp"
                android:layout_height="16dp"
                />
            <TextView
                android:id="@+id/idFragmentHomeIdTextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <com.example.myapplication.view.Component.ButtonPrimary
                android:id="@+id/idFragmentHomeAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Đồng ý"
                android:textSize="12sp"
                />
            <com.example.myapplication.view.Component.ButtonSecondary
                android:id="@+id/idFragmentHomeTuChoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Từ chối"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>