<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StoryActivityPage">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:id="@+id/idScreen"
        >
        <!-- Footer !-->
        <include layout="@layout/app_component_header" />
        <!-- Body !-->
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="86"
            android:background="#fff"
            android:id="@+id/idBody">
            <!-- Loading !-->
            <include layout="@layout/app_component_loading" />
            <!-- Content !-->
            <include layout="@layout/app_component_content_home"/>
        </FrameLayout>
        <!-- Footer !-->
        <include layout="@layout/app_component_footer" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>