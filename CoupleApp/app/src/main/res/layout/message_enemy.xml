<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/idPageMessageItemImageAvatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/account_svgrepo_com"
        app:shapeAppearanceOverlay="@style/circle"
        android:layout_gravity="top|left"
        android:layout_marginRight="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/idPageMessageItemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text=""
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/background_message_primary"
            />
        <TextView
            android:id="@+id/idPageMessageItemTimeSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/secondary"
            android:fontFamily="serif"
            />
    </LinearLayout>
</LinearLayout>