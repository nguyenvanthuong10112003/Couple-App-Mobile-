<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/idScrollScreen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idContent"
        android:scrollbars="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="UselessParent"
            android:id="@+id/idPageInfoUserTabView">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:alpha="0.8"
                android:background="@color/primary" />
            <RelativeLayout
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/tag_borderradius_bg_white"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:paddingBottom="10dp"
                >
                <FrameLayout
                    android:id="@+id/idPageUserInfoTabViewContainer"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_white"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/idPageInfoUserTabViewImageAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="avatar"
                        android:src="@drawable/account_svgrepo_com"
                        android:textAlignment="center"
                        app:shapeAppearanceOverlay="@style/circle"
                        android:onClick="viewImageBig"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idPageUserInfoTabViewContainer"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleAlias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biệt danh"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"
                            />
                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleAlias"
                            android:id="@+id/idPageInfoUserTabViewTextAlias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:alpha="0.6"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/secondary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleFullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"
                            />

                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleFullname"
                            android:id="@+id/idPageInfoUserTabViewTextFullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.6"
                        android:background="@color/secondary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleDob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày sinh"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"
                            />
                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleDob"
                            android:id="@+id/idPageInfoUserTabViewTextDob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.6"
                        android:background="@color/secondary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới tính"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"
                            />

                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleGender"
                            android:id="@+id/idPageInfoUserTabViewTextGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.6"
                        android:background="@color/secondary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"/>

                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleEmail"
                            android:id="@+id/idPageInfoUserTabViewTextEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.6"
                        android:background="@color/secondary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleTimeCreate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian tạo"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"
                            />
                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleTimeCreate"
                            android:id="@+id/idPageInfoUserTabViewTextTimeCreate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.6"
                        android:background="@color/secondary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/idPageInfoUserTabViewTitleLifeStory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiểu sử"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/user_infouser_2"
                            android:alpha="0.6"
                            />
                        <TextView
                            android:layout_below="@+id/idPageInfoUserTabViewTitleLifeStory"
                            android:id="@+id/idPageInfoUserTabViewTextLifeStory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text=""
                            android:textColor="@color/secondary"
                            android:textStyle="italic"
                            android:textSize="@dimen/user_infouser_3"
                            android:layout_marginLeft="5dp"
                            android:maxLines="4"
                            android:ellipsize="end"
                            />
                        <FrameLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            >
                            <com.example.myapplication.view.Component.Button
                                android:clickable="true"
                                android:onClick="toggleTabEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chỉnh sửa"
                                android:gravity="bottom"
                                android:layout_gravity="bottom"
                                android:background="@drawable/button_primary_elip"
                                android:textColor="@color/white"
                                />
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/idPageInfoUserTabEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:alpha="0.8"
                android:background="@color/primary" />
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="-80dp"
                android:background="@drawable/circle_white"
                android:padding="5dp"
                android:onClick="openImagePicker"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/idPageInfoUserTabEditImageAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="avatar"
                    android:src="@drawable/account_svgrepo_com"
                    android:textAlignment="center"
                    app:shapeAppearanceOverlay="@style/circle"
                    android:onClick="openImagePicker"/>
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/circle_white_border"
                    android:onClick="openImagePicker"
                    tools:ignore="RtlHardcoded">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/camera_primary"
                        android:layout_gravity="center"
                        android:onClick="openImagePicker"
                        />
                </FrameLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/idPageInfoUserTabEditGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Họ và tên"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/user_infouser_2"/>

                <com.example.myapplication.view.Component.Input
                    android:id="@+id/idPageInfoUserTabEditInputFullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Biệt danh (nếu có)"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/user_infouser_2"/>

                <com.example.myapplication.view.Component.Input
                    android:id="@+id/idPageInfoUserTabEditInputAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Giới tính"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/user_infouser_2"/>

                <RadioGroup
                    android:id="@+id/idPageInfoUserTabEditRadioGender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/idPageInfoUserTabEditRadioGenderMale"
                        style="@style/RadioButtonStyle"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:text="Nam"
                        android:textColor="@color/secondary"
                        android:button="@drawable/radiobutton_primary"
                        android:textAlignment="center"
                        android:textSize="@dimen/user_infouser_2"
                        />

                    <RadioButton
                        android:id="@+id/idPageInfoUserTabEditRadioGenderFeMale"
                        style="@style/RadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:textColor="@color/secondary"
                        android:button="@drawable/radiobutton_primary"
                        android:textAlignment="center"
                        android:textSize="@dimen/user_infouser_2"
                        />
                </RadioGroup>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Ngày sinh"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/user_infouser_2"/>

                <com.example.myapplication.view.Component.InputDate
                    android:id="@+id/idPageInfoUserTabEditInputDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </com.example.myapplication.view.Component.InputDate>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Email"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/user_infouser_2"/>

                <com.example.myapplication.view.Component.Input
                    android:id="@+id/idPageInfoUserTabEditInputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Tiểu sử"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/user_infouser_2"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="11"
                    android:layout_column="0"
                    >
                    <com.example.myapplication.view.Component.InputArea
                        android:id="@+id/idPageInfoUserTabEditInputLifeStory"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <com.example.myapplication.view.Component.ButtonSecondary
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="Hủy bỏ"
                        android:layout_marginRight="5dp"
                        android:onClick="toggleTabEdit"/>
                    <com.example.myapplication.view.Component.ButtonPrimary
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="Lưu"
                        android:layout_marginLeft="5dp"
                        android:onClick="sendEdit"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>