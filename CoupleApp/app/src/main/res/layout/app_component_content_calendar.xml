<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/idContent">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.example.myapplication.component.ButtonPrimary
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            />
        <EditText
            android:id="@+id/idInputYear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="number"
            android:layout_margin="10dp"
            android:minWidth="50dp"
            android:maxLength="4"
            android:text="2000"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/input_primary"
            android:textCursorDrawable="@drawable/custom_cursor_color"
            />
        <com.example.myapplication.component.ButtonPrimary
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn tháng" />

        <Spinner
            android:id="@+id/spinnerChoseMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="@dimen/error_text_size_normal"
            android:spinnerMode="dropdown" />
    </LinearLayout>
    <com.example.myapplication.component.CalendarTable
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTableCal"
        >
    </com.example.myapplication.component.CalendarTable>
    <TextView
        android:id="@+id/idDetailDayCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:text="Ngày 02/04/2024"
        android:textAlignment="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>